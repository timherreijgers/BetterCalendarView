<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BetterCalendarView">
        <!-- Whether the current date has to be colored differently-->
        <attr name="colorCurrentDay" format="boolean"/>

        <!-- The currently available styles for the calendar-->
        <attr name="colorScheme" format="enum">
            <enum name="dark" value="0"/>
            <enum name="light" value="1"/>
        </attr>
    </declare-styleable>

</resources>